<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.MockViewActivity">

    <androidx.constraintlayout.utils.widget.MockView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:mock_showDiagonals="true"
        app:mock_label ="测试一下是什么东西"
        app:mock_showLabel="true"
        app:mock_labelColor="@color/md_orange_600"
        app:mock_diagonalsColor="@color/base_blue"
        app:mock_labelBackgroundColor="@color/base_blue"/>


    <androidx.constraintlayout.utils.widget.MockView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_height="100dp"
        app:mock_showDiagonals="false"
        app:mock_label ="测试一下是什么东西"
        app:mock_showLabel="true"
        app:mock_labelColor="@color/md_orange_600"
        app:mock_diagonalsColor="@color/base_blue"
        app:mock_labelBackgroundColor="@color/base_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:text="app:mock_showDiagonals=false\n
        app:mock_label =测试一下是什么东西\n
        app:mock_showLabel=true\n
        app:mock_labelColor=@color/md_orange_600\n
    app:mock_diagonalsColor=@color/base_blue\n
    app:mock_labelBackgroundColor=@color/base_blue\n"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>