<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.RecordActivity">


    <RelativeLayout
        android:id="@+id/rl_record_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/weike_record_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="4dp"
        android:padding="20dp">

        <ProgressBar
            android:id="@+id/progressBar_record"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:max="3600"
            android:progressDrawable="@drawable/weike_progressbar_bg"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_record_time"
            android:layout_below="@id/progressBar_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF999999"
            android:text="00:00"
            android:textSize="14sp"
            />
        <TextView
            android:layout_below="@id/progressBar_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60:00"
            android:layout_alignParentRight="true"
            android:textColor="#FF999999"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_reRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重录"
            android:layout_marginTop="38dp"
            android:layout_below="@id/tv_record_time"
            android:drawableTop="@drawable/weike_rerecord_btn_bg_selector"
            android:textColor="#FF333333"
            android:textSize="14sp"
            android:visibility="invisible"
            android:layout_marginLeft="20dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_save_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_marginTop="38dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/tv_record_time"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/weike_record_save_btn_bg_selector"
            android:textColor="#FF333333"
            android:textSize="14sp"
            android:visibility="invisible"
            android:drawablePadding="10dp"
            android:gravity="center"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/cd_start_record"
            android:layout_below="@id/tv_record_time"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="45dp"
            app:cardBackgroundColor="#FFFF5A31"
            android:layout_marginTop="15dp"
            android:elevation="1dp"
            style="@style/clickStyle"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/iv_record_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_start_record"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_state_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击录音"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cd_start_record"
            android:textColor="#FF333333"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/edit_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="top"
        android:hint="提前输入/粘贴台词，录制更轻松"
        android:paddingLeft="30dp"
        android:paddingTop="27dp"
        android:paddingRight="30dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_above="@id/rl_record_view"
        />
</RelativeLayout>