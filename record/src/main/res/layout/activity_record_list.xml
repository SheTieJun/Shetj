<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.RecordListActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/IRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl_record_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/weike_record_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="4dp"
        android:padding="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cd_start_record"
            android:layout_below="@id/tv_record_time"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#FFFF5A31"
            android:elevation="1dp"
            style="@style/clickStyle"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/iv_record_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_start_record"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_state_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="开始录音"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cd_start_record"
            android:textColor="#FF333333"
            android:textSize="14sp"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>