<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".worker.WorkerActivity">

    <Button
        android:id="@+id/addWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="添加one_worker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/addRxWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加One_rxWorker"
        app:layout_constraintTop_toBottomOf="@id/addWorker"
        app:layout_constraintEnd_toEndOf="@id/addWorker"
        android:layout_marginStart="8dp"
        />



    <Button
        android:id="@+id/addPeriodicWorkRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="添加PeriodicWork"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/addRxPeriodicWorkRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加PeriodicWork"
        app:layout_constraintTop_toBottomOf="@id/addPeriodicWorkRequest"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       />
</androidx.constraintlayout.widget.ConstraintLayout>